{
	"name": "Refined-Twitter-Fork",
	"version": "0.2.3",
	"description": "A fork of Refined Twitter. Simplifies the Twitter interface and adds useful features.",
	"homepage_url": "https://refined-twitter-fork.netlify.com",
	"manifest_version": 2,
	"minimum_chrome_version": "62",
	"browser_action": {
		"default_title": "Refined Twitter",
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"downloads",
		"webRequest",
		"tabs",
		"webRequestBlocking",
		"contextMenus",
		"https://pbs.twimg.com/"
	],
	"icons": {
		"128": "icon2.png"
	},
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	},
	"background": {
		"scripts": [
			"browser-polyfill.min.js",
			"optionsInit.js",
			"background.js"
		]
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"https://twitter.com/*"
			],
			"css": [
				"style/content.css",
				"style/code-highlight.css"
			],
			"js": [
				"zepto.min.js",
				"browser-polyfill.min.js",
				"content.js"
			]
		}
	]
}